{% extends 'adminbase.html.twig' %}

{% block title %}ÜYE DÜZENLEME{% endblock %}

{% block content %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Üye Düzenleme Formu</h4> </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                <ol class="breadcrumb">


                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>


        <div class="white-box">
            <form class="form-horizontal form-material" method=" post">
                <div class="form-group">
                    <label class="col-md-12"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Name</font></font></label>
                    <div class="col-md-12">
                        <input type="text" name="user[name]" value="{{ user.name }}" placeholder="Johnathan Doe" class="form-control form-control-line"> </div>
                </div>
                <div class="form-group">
                    <label for="example-email" class="col-md-12"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">E-mail</font></font></label>
                    <div class="col-md-12">
                        <input type="email" name="user[email]" value="{{ user.email }}"  placeholder="johnathan@admin.com" class="form-control form-control-line" name="example-email" id="example-email"> </div>
                </div>
                <div class="form-group">
                    <label class="col-md-12"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Password</font></font></label>
                    <div class="col-md-12">
                        <input type="password" name="user[password]" value="{{ user.password }}" class="form-control form-control-line"> </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-12"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Type</font></font></label>
                    <div class="col-sm-12">
                        <select name="user[roles]" class="form-control form-control-line">
                            {% for item in user.roles %}
                            <option selected>{{ item }} </option>
                            {% endfor %}
                            <option><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">ROLE_ADMIN</font></font></option>
                            <option><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">ROLE_USER</font></font></option>

                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-12"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Status</font></font></label>
                    <div class="col-sm-12">
                        <select  name="user[status]" class="form-control form-control-line">
                            <option> {{ user.status }} </option>
                            <option><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">True</font></font></option>
                            <option><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">False</font></font></option>

                        </select>
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-sm-12">
                        <button class="btn btn-success"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Kaydet</font></font></button>
                    </div>
                </div>
            </form>
        </div>





    </div>
    <!-- /.container-fluid -->
    {% endblock %}










