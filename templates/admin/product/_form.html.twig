<form class="" method="post">
    <div class="form-group">
        <label class="col-md-9">Kategorisi</label>
        <div class="col-sm-10">
            <select  name="product[category_id]" class="form-control form-control-line">
                {% if(catname) %}
                <option vale="{{ product.categoryid }}">{{ catname[0].title }}></option>
                 {% endif %}


                {% for cat in catlist %}
                    <option value="{{ cat.id }}">{{ cat.title }}</option>
                {% endfor %}

            </select>
        </div>

    </div>
    <div class="form-group">
        <label class="col-md-9">Title</label>
        <div class="col-md-10">
            <input type="text" name="product[title]" value="{{ product.title }}"  placeholder="title" class="form-control form-control-line"> </div>
    </div>
    <div class="form-group">
        <label class="col-md-9">Keywords</label>
        <div class="col-md-10">
            <input type="text" name="product[keywords]" value="{{ product.keywords }}" class="form-control form-control-line"> </div>
    </div>
    <div class="form-group">
        <label class="col-md-9">Description</label>
        <div class="col-md-10">
            <input type="text" name="product[description]" value="{{ product.description }}" class="form-control form-control-line"> </div>
    </div>

    <div class="form-group">
        <label class="col-md-9">FiyatÄ±</label>
        <div class="col-md-10">
            <input type="text" name="product[description]" value="{{ product.sprice }}" class="form-control form-control-line"> </div>
    </div>




    <div class="form-group">
        <label class="col-sm-9">Status</label>
        <div class="col-sm-10">
            <select  name="product[status]" class="form-control form-control-line">
                <option> {{ product.status }} </option>
                <option>True</option>
                <option>False</option>

            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-9">Detay</label>
        <div class="col-md-10">
            <textarea id="detail" name="product[detail]" rows="10" cols="100">{{ product.detail }}</textarea>
            </div>
    </div>


    <div class="form-group">
        <div class="col-sm-12">
            <button class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>

<script>
    ClassicEditor
        .create( document.querySelector( '#detail' ) )
        .catch( error => {
            console.error( error );
        } );
</script>