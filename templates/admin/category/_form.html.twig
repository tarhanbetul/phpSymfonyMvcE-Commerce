<form class="form-horizontal form-material" method="post">
    <div class="form-group">
        <label class="col-md-9">Ãœst Kategori</label>
        <div class="col-sm-10">
            <select  name="category[parentid]" class="form-control form-control-line">
                <option>{{ category.parentid }}></option>
               <option value="0">Ana Kategori</option>
                {% for cat in catlist %}
                <option value="{{ cat.id }}">{{ cat.title }}</option>
                {% endfor %}

            </select>
        </div>

    </div>
    <div class="form-group">
        <label class="col-md-9">Title</label>
        <div class="col-md-10">
            <input type="text" name="category[title]" value="{{ category.title }}"  placeholder="title" class="form-control form-control-line"> </div>
    </div>
    <div class="form-group">
        <label class="col-md-9">Keywords</label>
        <div class="col-md-10">
            <input type="text" name="category[keywords]" value="{{ category.keywords }}" class="form-control form-control-line"> </div>
    </div>
    <div class="form-group">
        <label class="col-md-9">Description</label>
        <div class="col-md-10">
            <input type="text" name="category[description]" value="{{ category.description }}" class="form-control form-control-line"> </div>
    </div>



    <div class="form-group">
        <label class="col-sm-9">Status</label>
        <div class="col-sm-10">
            <select  name="category[status]" class="form-control form-control-line">
                <option> {{ category.status }} </option>
                <option>True</option>
                <option>False</option>

            </select>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-12">
            <button class="btn btn-success">Kaydet</button>
        </div>
    </div>
</form>

