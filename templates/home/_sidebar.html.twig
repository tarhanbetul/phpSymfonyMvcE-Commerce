<style>

      ul#menu-v, #menu-v ul
     {
         width:200px; /* Main Menu width */
         border:1px solid #ec971f;
         list-style:none; margin:0; padding:0;
         z-index:9;
     }

       #menu-v li
        {
          margin:0;padding:0;
          position:relative;
          background-color:#8a6d3b; /*fallback color*/
          background-color:#ffffff;
          transition:background 0.5s;
        }
         #menu-v li:hover
          {
           background-color:#ffffff;
          }

         #menu-v a
          {
            font:normal 12px Arial;
            border-top:1px solid #eea236;
            display:block;
            color:#444444;
            text-decoration:none;
            line-height:26px;
            padding-left:22px;
             position:relative;
           }

        #menu-v li:first-child a
          {
             border-top:0;
          }
         #menu-v a:hover{
             background-color:#2c618f;
             color:white;
         }

         #menu-v a.arrow::after{
          content:'';
          position:absolute;
          display:inline;
          top:50%;
          margin-top:-4px;
          right:8px;
          border-width:4px;
          border-style:solid;
          border-color:transparent transparent transparent black;
          transition:border-color 0.5s;
          }

          #menu-v li a.arrow:hover::after
           {
              background-color:#666;
              border-color:transparent transparent transparent red;
            }

/*Sub level menu items
---------------------------------------*/
            #menu-v li ul
              {
                min-width:180px; /* Sub level menu min width */
                position:absolute;
                display:none;
                left:100%;
                top:0;
              }

             #menu-v li:hover > ul
              {
               display:block;
               }
</style>

